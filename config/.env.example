# Qdrant RAG Loader Configuration
# Copy to .env and fill in your values

# =============================================================================
# Wallabag Configuration
# =============================================================================
# Your Wallabag instance URL (no trailing slash)
WALLABAG_URL=https://wallabag.example.com

# API client credentials (create at https://your-wallabag/developer)
WALLABAG_CLIENT_ID=your_client_id
WALLABAG_CLIENT_SECRET=your_client_secret

# Your Wallabag login credentials
WALLABAG_USERNAME=your_username
WALLABAG_PASSWORD=your_password

# =============================================================================
# Qdrant Configuration
# =============================================================================
# Qdrant server URL
QDRANT_URL=http://localhost:6333

# API key for Qdrant (generate with: openssl rand -base64 32)
QDRANT_API_KEY=your_qdrant_api_key

# Collection names
WALLABAG_COLLECTION=wallabag_articles
PODCAST_COLLECTION=podcast_transcripts

# =============================================================================
# OpenAI Configuration
# =============================================================================
# API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# Embedding model (text-embedding-3-small is recommended for cost/quality)
EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# Podcast Configuration
# =============================================================================
# Default podcast directory (can be overridden with --podcast-dir)
PODCAST_DIR=/mnt/nas/podcasts

# =============================================================================
# Papers Configuration
# =============================================================================
# Directory containing papers/documents (can be overridden with --papers-dir)
PAPERS_DIR=/mnt/nas/papers

# Collection name in Qdrant
PAPERS_COLLECTION=papers

# =============================================================================
# Feeds (RSS/Atom) Configuration
# =============================================================================
# Feed list is defined in config/feeds.yaml (copy from feeds.yaml.example)

# Optional Firecrawl API key (leave blank for self-hosted without auth)
FIRECRAWL_API_KEY=

# Collection name in Qdrant
FEEDS_COLLECTION=news_feeds

# =============================================================================
# Processing Options
# =============================================================================
# Chunk size in characters (larger = more context per chunk, fewer chunks)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# For podcasts (transcripts benefit from larger context)
PODCAST_CHUNK_SIZE=1500
PODCAST_CHUNK_OVERLAP=300

# For papers (longer-form writing benefits from even larger context)
PAPERS_CHUNK_SIZE=2000
PAPERS_CHUNK_OVERLAP=400

# For feeds (news articles)
FEEDS_CHUNK_SIZE=1000
FEEDS_CHUNK_OVERLAP=200

# =============================================================================
# Static File Server URLs (for linking to source files in search results)
# =============================================================================
# Base URL for papers served via static web server (used by OpenWebUI tool)
PAPERS_BASE_URL=https://static-lan.maddock.net/papers

# Base URL for podcasts served via static web server (used by OpenWebUI tool)
PODCASTS_BASE_URL=https://static-lan.maddock.net/podcasts

# =============================================================================
# Kindle Highlights Configuration
# =============================================================================
# Directory containing Bookcision JSON export files
KINDLE_JSON_DIR=/path/to/kindle/exports

# Collection name in Qdrant
KINDLE_COLLECTION=kindle_highlights
